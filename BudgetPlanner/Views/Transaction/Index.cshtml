@model IEnumerable<BudgetPlanner.Models.Transaction>

@{
    ViewData["Title"] = "Transactions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Transactions</h2>

<style>
    .sub-pill {
        width: 300px;
    }
    .dropdown-payment{
        background-color:#303030
    }
</style>
<partial name="_IndexPartial" />
<div class="container">
    <table class="table">
        <thead class="list-group list-inline">
            <tr class="list-group-item" style="background-color:#375a7f;border-color:#375a7f;">
                <th class="sub-pill">
                    @Html.DisplayNameFor(model => model.TransactionName)
                </th>
                <th class="sub-pill">
                    @Html.DisplayNameFor(model => model.DateTime)
                </th>
                <th class="sub-pill">
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <th class="sub-pill">
                    @Html.DisplayNameFor(model => model.Company.CompanyName)
                </th>
                <th class="sub-pill"></th>
            </tr>
        </thead>
        <tbody class="list-group">
            @foreach (var item in Model)
            {
                <tr class="list-group-item">
                    <td class="sub-pill">
                        @Html.DisplayFor(modelItem => item.TransactionName)
                    </td>
                    <td class="sub-pill">
                        @Html.DisplayFor(modelItem => item.DateTime)
                    </td>
                    <td class="sub-pill">
                        £@Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td class="sub-pill">
                        @Html.DisplayFor(modelItem => item.Company.CompanyName)
                    </td>
                    <td class="sub-pill">
                        <a asp-action="Edit" asp-route-id="@item.TransId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.TransId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.TransId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>